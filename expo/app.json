{
  "expo": {
    "name": "FairTradeWorker",
    "slug": "fairtradeworker",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "scheme": "fairtradeworker",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1E3A5F"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.fairtradeworker.app",
      "buildNumber": "1",
      "config": {
        "usesNonExemptEncryption": false
      },
      "infoPlist": {
        "NSCameraUsageDescription": "FairTradeWorker uses your camera to capture photos and videos of job sites for accurate AI-powered job analysis.",
        "NSPhotoLibraryUsageDescription": "FairTradeWorker accesses your photos to upload images of job sites for instant quotes and project documentation.",
        "NSMicrophoneUsageDescription": "FairTradeWorker uses your microphone to record audio for voice-based job descriptions.",
        "NSLocationWhenInUseUsageDescription": "FairTradeWorker uses your location to find nearby contractors and optimize service routes.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "FairTradeWorker uses your location in the background for real-time job tracking and contractor dispatch.",
        "UIBackgroundModes": [
          "location",
          "fetch",
          "remote-notification"
        ]
      },
      "associatedDomains": [
        "applinks:fairtradeworker.com",
        "webcredentials:fairtradeworker.com"
      ],
      "privacyManifests": {
        "NSPrivacyAccessedAPITypes": [
          {
            "NSPrivacyAccessedAPIType": "NSPrivacyAccessedAPICategoryUserDefaults",
            "NSPrivacyAccessedAPITypeReasons": [
              "CA92.1"
            ]
          },
          {
            "NSPrivacyAccessedAPIType": "NSPrivacyAccessedAPICategorySystemBootTime",
            "NSPrivacyAccessedAPITypeReasons": [
              "35F9.1"
            ]
          }
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1E3A5F"
      },
      "package": "com.fairtradeworker.app",
      "versionCode": 1,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_BACKGROUND_LOCATION",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.VIBRATE",
        "android.permission.INTERNET"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "fairtradeworker.com",
              "pathPrefix": "/"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow FairTradeWorker to access your camera for job site documentation.",
          "microphonePermission": "Allow FairTradeWorker to access your microphone for audio notes.",
          "recordAudioAndroid": true
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow FairTradeWorker to use your location for contractor dispatch and job tracking.",
          "locationAlwaysPermission": "Allow FairTradeWorker to use your location in the background for real-time updates.",
          "locationWhenInUsePermission": "Allow FairTradeWorker to use your location to find nearby contractors."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow FairTradeWorker to access your photos for job documentation."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#1E3A5F",
          "sounds": [
            "./assets/notification-sound.wav"
          ]
        }
      ],
      "expo-apple-authentication",
      [
        "@sentry/react-native/expo",
        {
          "organization": "fairtradeworker",
          "project": "mobile-app"
        }
      ]
    ],
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "your-eas-project-id"
      }
    },
    "owner": "fairtradeworker",
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/your-eas-project-id"
    }
  }
}
